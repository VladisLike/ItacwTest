{% extends 'base.html.twig' %}

{% block title %}Product show{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Dashboard</a></li>
        {% if product.getSalesman.getId == app.user.getId %}
            <li class="breadcrumb-item"><a href="{{ path('products') }}">Products</a></li>
        {% endif %}
        <li class="breadcrumb-item active">{{ product.getName }}</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="text-center">
            <h2>Show Product</h2>
        </div>
        <div class="controls">
            {% if product.getSalesman.getId == app.user.getId %}
                <a href="{{ path('products.edit', {'id': product.getId}) }}" class="btn btn-primary">Edit</a>
            {% endif %}
        </div>
        <div class="box">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ product.getName }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.getPrice }} <span><i class="fa-solid fa-euro-sign"></i></span></td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>{{ product.getCreatedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Updated Date</th>
                    <td>{{ product.getUpdatedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}