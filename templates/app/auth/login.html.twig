{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            {% include '_flashes.html.twig' %}

                            <h1>Log In</h1>

                            <p class="text-muted">Sign In to your account</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="fa fa-envelope-open"></i>
                                    </span>
                                    <input class="form-control" type="email" name="email" value="{{ last_username }}"
                                           placeholder="Email"/>
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    <input class="form-control" type="password" name="password" placeholder="Password">
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-lg btn-outline-dark px-4" type="submit">Login</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card col-md-5 text-white bg-dark py-5">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p>Don't have an account? Please register.</p>
                                <a class="btn btn-lg  btn-outline-light mt-3"
                                   href="{{ path('auth.signup') }}">Register
                                    Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}